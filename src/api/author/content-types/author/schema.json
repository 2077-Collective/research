{
  "kind": "collectionType",
  "collectionName": "authors",
  "info": {
    "singularName": "author",
    "pluralName": "authors",
    "displayName": "Author",
    "description": "Create authors for your content"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "full_name": {
      "type": "string"
    },
    "external_id": {
      "type": "uid"
    },
    "username": {
      "type": "string",
      "required": true
    },
    "bio": {
      "type": "text"
    },
    "twitter_username": {
      "type": "string"
    },
    "articles": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::article.article",
      "mappedBy": "authors"
    }
  }
}
